stages:
  - setup
  - test
  - static
  - build
  - dockerize
  - release

variables:
  DOCKER_IMAGE_NAME: "grepbible-server"

cache:
  key: "$CI_COMMIT_REF_SLUG"
  paths:
    - node_modules/
    - .npm/

.node-base:
  image: node:latest
  before_script:
    - node -v  # Print out node version for debugging
    - npm -v   # Print out npm version for debugging
    - npm install  # Install project dependencies

update-version:
  stage: setup
  image: node:latest
  script:
    - node update-version.js
  only:
    - tags

eslint:
  stage: static
  extends: .node-base
  allow_failure: true
  script:
    - npm install eslint
    - npx eslint .
  when: manual

dockerize:
  stage: dockerize
  image: docker:20.10.24
  services:
    - docker:20.10.24-dind
  variables:
    DOCKER_DRIVER: overlay2
    DOCKER_TLS_CERTDIR: "/certs"
  script:
    - echo "Building Docker image..."
    - docker build -t ${DOCKER_IMAGE_NAME}:latest .
  when: manual

test:
  stage: test
  extends: .node-base
  script:
    - npm test  # Run tests

build:
  stage: build
  extends: .node-base
  script:
    - echo "Building application for production..."
    - npm run build
  artifacts:
    paths:
      - build/

release-npm-package:
  stage: release
  extends: .node-base
  only:
    - tags
  script:
    - echo "//registry.npmjs.org/:_authToken=${NPM_TOKEN}" > .npmrc
    - npm publish
  when: manual

release-docker:
  stage: release
  image: docker:20.10.24
  services:
    - docker:20.10.24-dind
  only:
    - tags
  script:
    - echo "Docker Hub Username ${DOCKER_HUB_USERNAME}"
    - docker info
    - docker build -t ${DOCKER_HUB_USERNAME}/${DOCKER_IMAGE_NAME}:${CI_COMMIT_TAG} .
    - echo $DOCKER_HUB_ACCESS_TOKEN | docker login -u $DOCKER_HUB_USERNAME --password-stdin
    - docker push ${DOCKER_HUB_USERNAME}/${DOCKER_IMAGE_NAME}:${CI_COMMIT_TAG}
  when: manual
